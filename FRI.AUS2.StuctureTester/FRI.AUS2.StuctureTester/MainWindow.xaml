<Window x:Class="FRI.AUS2.StuctureTester.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FRI.AUS2.StuctureTester"
    mc:Ignorable="d"
    Title="AUS2 Structure tester" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <Menu>
                <MenuItem Header="File">
                    <MenuItem x:Name="_mnitem_Test" Header="Test" Click="_mnitem_Test_Click" />
                </MenuItem>
                <MenuItem x:Name="_mnitem_Close" Header="Close" Click="_mnitem_Close_Click" />
            </Menu>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5">
            <!-- manual data insert -->
            <StackPanel Orientation="Horizontal">
                <GroupBox Header="Insert node">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" MinWidth="50" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" MinWidth="100" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!--node form-->
                        <TextBlock Text="X:" />
                        <TextBox x:Name="_txtb_X" Grid.Column="2" />

                        <TextBlock Text="Y:" Grid.Row="2" />
                        <TextBox x:Name="_txtb_Y" Grid.Column="2" Grid.Row="2" />

                        <TextBlock Text="Data:" Grid.Row="4" />
                        <TextBox x:Name="_txtb_Data" Grid.Column="2" Grid.Row="4" />

                        <Button x:Name="_btn_Insert" Content="Insert" Grid.Column="4" Grid.Row="2"
                            Click="_btn_ManualInsert_Click" />
                    </Grid>
                </GroupBox>
            </StackPanel>
            
            <!-- tree statistics -->
            <StackPanel Orientation="Horizontal">
                <GroupBox Header="Tree statistics">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" MinWidth="50" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" MinWidth="100" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Nodes count:" />
                        <TextBlock x:Name="_txt_NodesCount" Grid.Column="2" TextAlignment="Right" />
                    </Grid>
                </GroupBox>
            </StackPanel>
            
            <!-- tree visualization -->
            <StackPanel Orientation="Vertical">
                <TreeView x:Name="_treeView_Structure" />

                <Button x:Name="_btn_Render" Content="Rerender tree" Click="_btn_Render_Click" />

            </StackPanel>
                
        </StackPanel>

    </Grid>
</Window>